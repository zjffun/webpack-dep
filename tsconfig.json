{
  "include": ["./src"],
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES6",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
